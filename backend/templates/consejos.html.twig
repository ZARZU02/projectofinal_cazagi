				<style>
					.descripcion-container {
						text-align: center;
					}

					.expandir-btn,
					.minimizar-btn {
						margin: 10px auto;
					}
				</style>

				<section id="comenzar-entrenar">
					{% for consejo in consejos %}
						<div class="consejo" id="consejo{{ loop.index }}">
							<span class="close-btn" data-id="{{ consejo.id }}">x</span>
							<h2>{{ consejo.titulo }}</h2>
							<div class="descripcion-container">
								<p class="descripcion-short">{{ consejo.descripcion | slice(0, 100) }}</p>
								<p class="descripcion-full" style="display: none;">{{ consejo.descripcion }}</p>
								<button class="expandir-btn">Leer m√°s</button>
								<button class="minimizar-btn" style="display: none;">Minimizar</button>
							</div>
						</div>
					{% endfor %}
				</section>

				<script>
					// JavaScript para expandir y minimizar los mensajes
document.querySelectorAll('.expandir-btn').forEach(btn => {
btn.addEventListener('click', function () { // Minimizar todos los elementos
document.querySelectorAll('.descripcion-full').forEach(descripcionFull => {
descripcionFull.style.display = 'none';
});
document.querySelectorAll('.descripcion-short').forEach(descripcionShort => {
descripcionShort.style.display = 'block';
});
document.querySelectorAll('.expandir-btn').forEach(expandirBtn => {
expandirBtn.style.display = 'block';
});
document.querySelectorAll('.minimizar-btn').forEach(minimizarBtn => {
minimizarBtn.style.display = 'none';
});

// Expandir el elemento seleccionado
const descripcionContainer = this.parentElement;
const descripcionShort = descripcionContainer.querySelector('.descripcion-short');
const descripcionFull = descripcionContainer.querySelector('.descripcion-full');
const minimizarBtn = descripcionContainer.querySelector('.minimizar-btn');
this.style.display = 'none';
descripcionShort.style.display = 'none';
descripcionFull.style.display = 'block';
minimizarBtn.style.display = 'block';
});
});

document.querySelectorAll('.minimizar-btn').forEach(btn => {
btn.addEventListener('click', function () {
const descripcionContainer = this.parentElement;
const descripcionShort = descripcionContainer.querySelector('.descripcion-short');
const descripcionFull = descripcionContainer.querySelector('.descripcion-full');
const expandirBtn = descripcionContainer.querySelector('.expandir-btn');
this.style.display = 'none';
descripcionFull.style.display = 'none';
descripcionShort.style.display = 'block';
expandirBtn.style.display = 'block';
});
});
				</script>


				<div class="consejos">

					<button id="crear-consejo" onclick="window.location.href = 'http://localhost:8000/foroconsejos'">Crear Nuevo Consejo</button>
